CREATE TABLE sql_account (
  id INTEGER NOT NULL PRIMARY KEY,
  olm_pickle_key TEXT,
  base_url TEXT,
  user_id TEXT,
  device_id TEXT,
  access_token TEXT,
  sync_batch_token TEXT,
  filter_id TEXT,
  display_name TEXT,
  avatar_url TEXT
);

saveAccount:
INSERT OR REPLACE INTO sql_account
VALUES ?;

getAccount:
SELECT * FROM sql_account
WHERE id = ?;

deleteAccount:
DELETE FROM sql_account
WHERE id = ?;
